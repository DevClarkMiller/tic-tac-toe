{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "plugins": [
        "flowtype",
        "import",
        "react",
        "react-hooks"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:storybook/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "requireConfigFile": false,
        "ecmaFeatures": {
            "jsx": true,
            "tsx": true
        },
        "babelOptions": {
            "presets": [
                "@babel/preset-react"
            ]
        }
    },
    "overrides": [
        {
            "files": [
                "*.{ts,tsx}"
            ],
            "parser": "@typescript-eslint/parser",
            "plugins": [
                "flowtype",
                "import",
                "react",
                "react-hooks",
                "@typescript-eslint"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:react/recommended",
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended",
                "plugin:prettier/recommended",
                "plugin:react/jsx-runtime"
            ],
            "rules": {
                "react/prop-types": "off"
            }
        },
        {
            "files": [
                "*.spec.ts"
            ],
            "parser": "@typescript-eslint/parser",
            "plugins": [
                "flowtype",
                "import",
                "react",
                "react-hooks",
                "@typescript-eslint",
                "playwright"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:react/recommended",
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended",
                "plugin:prettier/recommended",
                "plugin:playwright/playwright-test"
            ]
        }
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxBOF": 0,
                "maxEOF": 0
            }
        ],
        "no-console": "off",
        "no-useless-concat": "error",
        "no-array-constructor": "error",
        "no-new-object": "error",
        "no-var": "error",
        "react/prop-types": "off",
        "react/display-name": "off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "error",
        "react/react-in-jsx-scope": "off",
        "react/jsx-handler-names": [
            "error",
            {
                "eventHandlerPrefix": "handle",
                "eventHandlerPropPrefix": "on"
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}